#!/bin/bash

# Check if the tunnel 'maere' is in the list
if ip addr show | grep -q "maere"; then
    # Extract the IP address of the 'maere' tunnel
    IP=$(ip addr show maere | grep -oP '(?<=inet\s)\d+\.\d+\.\d+\.\d+')
    
    # Check if IP was found, otherwise return "DOWN"
    if [ -n "$IP" ]; then
        echo "$IP"
    else
        echo "DOWN"
    fi
else
    echo "DOWN"
fi
